@model educa_tube_code.Models.Playlist

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/css/PlaylistStyle/Playlist.css" />


<h2 class="confirmAPlaylist">Edite informações Playlist <i class="bi bi-pencil-square"></i></h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                    <textarea rows="4" asp-for="Descricao" class="form-control" />@Model.Descricao</textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
           <br />
                <div class="buttonsDiv">
                    <input type="submit" value="Salvar" class="primaryButton deleteButton"  />
                    <a class="primaryButton backButton" asp-action="Index"> <i class="bi bi-arrow-bar-left"></i> Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
