@model educa_tube_code.Models.VideoPlaylist

@{
    ViewData["Title"] = "AddVideo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddVideo</h1>

<h4>VideoPlaylist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVideo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VideoId" class="control-label"></label>
                <input asp-for="VideoId" class ="form-control" asp-items="ViewBag.VideoId"></input>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
