@model educa_tube_code.Models.Playlist

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/css/PlaylistStyle/PlaylistDelete.css"/>


<h4 class="confirmDeletePlaylist "> Tem certeza que deseja deletar essa Playlist?</h4>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        <dt class="col-sm-2">
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="buttonsDiv">
            <input class="primaryButton deleteButton"  type="submit" sp-controller="Playlists" asp-action="DeleteConfirmed" value="Deletar" />
            <a class="primaryButton backButton" asp-action="Index"> <i class="bi bi-arrow-bar-left"></i> Voltar</a>
        </div>
    </form>
</div>