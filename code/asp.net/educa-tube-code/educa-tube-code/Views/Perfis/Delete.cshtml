@model educa_tube_code.Models.Usuario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Exclusão de conta</h1>
<hr />
<div>
    <h3>Tem certeza que deseja excluir sua conta no EducaTube?</h3>
    <p>Após a exclusão da conta ela não pode mais ser LOGADA ou RECUPERADA.</p>
   <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="SIM" asp-controller="Perfis" asp-action="DeleteConfirmed" class="btn btn-danger" /> |
        <input type="submit" value="NÃO" asp-action="Index" class="btn btn-primary" />
    </form>
</div>
