@model IEnumerable<educa_tube_code.Models.Nota>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/css/NotasStyle/Notas.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="ContainerMain" >

    <h2>Bloco de notas</h2>

    <div class="addNote">
        <a asp-action="Create">Adicionar nota <i class="bi bi-plus-circle"></i> </a>
    </div>

    <div class="ContainerCards">

        @foreach (var item in Model)
        {
            <div class="noteCard">

                <div class="noteTitleDiv">
                    <div class="noteTitle">
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </div>

                    <div class="icons">
                        <a asp-action="Details" asp-route-id="@item.Id"> <i class="bi bi-card-text btnView"></i> </a>
                        <a asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square btnEdit"></i> </a>
                        <a asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-x-square btnDelete"></i> </a>
                    </div>
                </div>

                <div class="conteudoPrev">
                    @Html.DisplayFor(modelItem => item.Conteudo)
                </div>

                <div class="noteDate">
                    @Html.DisplayFor(modelItem => item.DataCriacao)
                </div>

            </div>
        }

    </div>

</div>
