@model educa_tube_code.Models.Nota

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/css/NotasStyle/NotasCreate.css" />
<link rel="stylesheet" type="text/css" href="~/css/NotasStyle/NotasEdit.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="mainDiv">
    <h4>Editar Nota <i class="bi bi-pencil-square"></i> </h4>

    <div class="row">
        <div class="divForm">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div>
                    <input class="inp inpTitle" asp-for="Titulo" placeholder="Editar título" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div>
                    <textarea rows="8" class="inp inpContent" asp-for="Conteudo" placeholder="Editar texto"></textarea>
                    <span asp-validation-for="Conteudo" class="text-danger"></span>
                </div>

                <div class="userCamp">
                    <label asp-for="UsuarioId"></label>
                    <select asp-for="UsuarioId" asp-items="ViewBag.UsuarioId"></select>
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>
                <div class="buttonsDiv">
                    <input class="primaryButton" type="submit" value="Save" />
                    <a class="primaryButton backButton" asp-action="Index"><i class="bi bi-arrow-bar-left"></i> Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
