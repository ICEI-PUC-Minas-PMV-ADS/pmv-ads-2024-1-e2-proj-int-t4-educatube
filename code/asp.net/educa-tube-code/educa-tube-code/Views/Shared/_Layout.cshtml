<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - educa_tube_code</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/educa_tube_code.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/layout.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script defer src="~/js/"></script>
</head>

<body>
    <header class="headerBox">
        <nav class="menuTop">
            <div class="logoDiv" style="display:flex; flex-direction:column; justify-content: center; gap:0;">
                <img asp-area="" asp-controller="Home" asp-action="Index" src="~/img/etlogo.png" width="50px" height="50px" alt="EducaTube logo" />
                <a class="title" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.2rem;">EducaTube</a>
            </div>

            <div class="searchDiv">
                <form asp-controller="Home" asp-action="Index" method="get">
                    <input class="searchBox" type="text" name="query" placeholder="Pesquisar vídeos" />
                    <button type="submit" class="btn btn-link">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>

            <div class="user">
                <a class="nav-link text-dark" asp-area="" asp-controller="Perfis" asp-action="Index" style="display: flex;align-items: center;gap: 1rem;">
                    <i class="bi bi-person-circle"></i>
                @if (User.Identity.IsAuthenticated)
                {
                    @User.Identity.Name
                }
                else
                {
                    <span>User</span>
                }
                <i class="bi bi-caret-down-fill"></i>
                 </a>
            </div>

            <div class="logout">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">
                    <i class="bi bi-box-arrow-left"></i>
                </a>
            </div>
        </nav>
    </header>

    <aside>
        <div class="sideMenu">
            <div class="tools">
                <ul>
                    <li>
                        <i class="bi bi-house-door"></i>
                        <a asp-area="" asp-controller="Home" asp-action="Index">EducaTube</a>
                    </li>
                    <li>
                        <i class="bi bi-journal-text"></i>
                        <a asp-area="" asp-controller="Notas" asp-action="Index">Bloco de notas</a>
                    </li>
                    <li onclick="pomoAtivador()">
                        <i class="bi bi-stopwatch" ></i>
                        Pomodoro
                    </li>
                    <li>
                        <i class="bi bi-calendar"></i>
                        Agenda
                    </li>
                    <li>
                        <i class="bi bi-list-nested"></i>
                        Playlists
                    </li>
                    <li>
                        <i class="bi bi-bookmark-check"></i>
                        Vídeos salvos
                    </li>
                    <li>
                        <i class="bi bi-clock-history"></i>
                        Histórico
                    </li>
                </ul>
            </div>
        </div>
    </aside>

    <div class="contMain">
        <main class="mainLayout" role="main">
            <div class="pomodo-tela" style="display:none; flex-direction:column;position:absolute; top:136px;left:auto;padding:12px;border-color:grey;border:thin;color:grey; z-index:auto;">
                <div>
                    <div class="current-time" style="font-size:1.8rem;">

                    </div>
                    <div >

                    </div>
                </div>
            </div>
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        let time = document.getElementById("curent-time");
        setInterval(() => {
            let d = new Date();
            time.innerHTML = d.toLocaleTimeString();
        },1000)
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
