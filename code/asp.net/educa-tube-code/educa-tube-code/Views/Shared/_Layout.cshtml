<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - educa_tube_code</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/educa_tube_code.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/layout.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    <header class="headerBox">
        <nav class="menuTop">
            <div class="logoDiv">
                <a class="title" asp-area="" asp-controller="Home" asp-action="Index">EducaTube</a>
            </div>

            <div class="searchDiv">
                <input class="searchBox" type="text" placeholder="Pesquisar" />
                <i class="bi bi-search"></i>
            </div>

            <div class="user">
                <i class="bi bi-person-circle"></i>
                @if (User.Identity.IsAuthenticated)
                {
                    @User.Identity.Name
                }
                else
                {
                    <span>User</span>
                }
                <i class="bi bi-caret-down-fill"></i>
            </div>

            <div class="logout">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut"><i class="bi bi-box-arrow-left"></i></a>
            </div>
        </nav>
    </header>

    <aside>
        <div class="sideMenu">
            <div class="tools">
                <ul>
                    <li>
                        <i class="bi bi-house-door"></i>
                        <a asp-area="" asp-controller="Home" asp-action="Index">EducaTube</a>
                    </li>
                    <li>
                        <i class="bi bi-journal-text"></i>
                        <a asp-area="" asp-controller="Notas" asp-action="Index">Bloco de notas</a>
                    </li>
                    <li>
                        <i class="bi bi-stopwatch"></i>
                        Pomodoro
                    </li>
                    <li>
                        <i class="bi bi-calendar"></i>
                        Agenda
                    </li>
                    <li>
                        <i class="bi bi-list-nested"></i>
                        Playlists
                    </li>
                    <li>
                        <i class="bi bi-bookmark-check"></i>
                        Vídeos salvos
                    </li>
                    <li>
                        <i class="bi bi-clock-history"></i>
                        Histórico
                    </li>
                </ul>
            </div>
        </div>
    </aside>

    <div class="contMain">
        <main role="main">
            @RenderBody()
        </main>
    </div>

